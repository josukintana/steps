!!!
%html
  %head
    %title Steps
    = stylesheet_link_tag 'web_app_theme'
    = javascript_include_tag 'application'
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{:href => "/"} Steps
        #user-navigation
          %ul.wat-cf
            %li
              %a{:href => "#"}= t(".profile")
            %li
              %a{:href => "#"}= t(".settings")
            %li
              = link_to t(".logout"), destroy_user_session_path, :method => :delete
        #main-navigation
          %ul.wat-cf
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{:class => "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; #{Time.now.year} Steps.
        #sidebar
          = yield :sidebar
