.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", steps_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_step_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", step_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.step.index", :default => t("activerecord.labels.index", :default => "Index"))
          \:
        = @step.index
      %p
        %b
          = t("activerecord.attributes.step.text", :default => t("activerecord.labels.text", :default => "Text"))
          \:
        = @step.text
      %p
        %b
          = t("activerecord.attributes.step.steplist_id", :default => t("activerecord.labels.steplist_id", :default => "Steplist"))
          \:
        = @step.steplist_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_step_path(@step), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), step_path(@step), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
