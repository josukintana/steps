.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", steps_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_step_path
      %li.active= link_to "#{t("web-app-theme.edit", :default => "Edit")}", edit_step_path
  .content
    %h2.title
      = t("web-app-theme.edit", :default => "Edit")
      Step
    .inner
      = form_for @step, :url => step_path(@step), :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
