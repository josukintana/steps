.block
  .secondary-navigation
    %ul.tabs.clearfix
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", steplists_path
      %li.active= link_to "#{t("web-app-theme.new", :default => "New")}", new_steplist_path
  .content
    %h2.title
      = t("web-app-theme.new", :default => "New")
      Steplist
    .inner
      = form_for :steplist, :url => steplists_path, :html => { :class => :form } do |f|
        = render :partial => "form", :locals => {:f => f}
- content_for :sidebar, render(:partial => 'sidebar')
