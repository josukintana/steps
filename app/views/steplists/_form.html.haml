.group
  = f.label :name, t("activerecord.attributes.steplist.name", :default => "Name"), :class => :label
  = f.text_field :name, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :description, t("activerecord.attributes.steplist.description", :default => "Description"), :class => :label
  = f.text_field :description, :class => 'text_field'
  %span.description Ex: a simple text
.group
  = f.label :user_id, t("activerecord.attributes.steplist.user_id", :default => "User"), :class => :label
  = f.number_field :user_id, :class => 'number_field'
  %span.description Ex: a simple text
.group.navform.wat-cf
  %button.button{:type => "submit"}
    = image_tag("web-app-theme/icons/tick.png", :alt => "#{t("web-app-theme.save", :default => "Save")}")
    = t("web-app-theme.save", :default => "Save")
  %span.text_button_padding= t("web-app-theme.or", :default => "or")
  = link_to t("web-app-theme.cancel", :default => "Cancel"), steplists_path, :class => "text_button_padding link_button"
