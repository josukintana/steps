.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", steplists_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_steplist_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", steplist_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.steplist.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @steplist.name
      %p
        %b
          = t("activerecord.attributes.steplist.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @steplist.description
      %p
        %b
          = t("activerecord.attributes.steplist.user_id", :default => t("activerecord.labels.user_id", :default => "User"))
          \:
        = @steplist.user_id
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_steplist_path(@steplist), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), steplist_path(@steplist), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
